---
import Main from "./Main.astro";

type Props = MarkdownLayoutProps<{
    title: string | undefined;
    subtitle: string | undefined;
    poster: string | undefined;
}>

const {title, subtitle, poster } = Astro.props.frontmatter;
---

<Main title="Fra Katerina | Blog">
     <figure class="figure">
         <img src={poster}
              alt="" width="100%"
              height="480px"
              class="figure__image"
         />
         <figcaption class="figure__caption">
             poster image for {title.toLowerCase()}
         </figcaption>

         <h1>{title}</h1>
         <h2>{subtitle}</h2>

     </figure>
    <slot/>
</Main>

<style>
    H1 + h2 {
        margin-bottom: 3rem;
    }

    .figure {
        margin: 0;
    }

    .figure__image {
        max-width: 100%;
        border-radius: 10px;
    }

    .figure__caption {
        font-size: 0.9rem;
    }

</style>